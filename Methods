        {
        Console.WriteLine("Happy Birthday to you!");
        Console.WriteLine("Happy Birthday to you!");
        Console.WriteLine("Happy Birthday to you! " + name);
            Console.WriteLine("You are " + age +  " years old");
        Console.WriteLine("Happy Birthday to you!");
            Console.WriteLine();
